{
  "compilerOptions": {
    "allowJs": true,
    "strict": true,
    "target": "ESNext",
    "lib": ["ES2021", "dom"],
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "paths": {
      "convex/*": ["./*"]
    },
    "moduleResolution": "Bundler",
    "module": "ESNext"
  },
  "include": ["./**/*.ts"],
  "exclude": ["_generated"]
}
